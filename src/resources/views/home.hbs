<a href="/create">
    <h2>Create</h2>
</a>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
        <th>Author</th>
    </tr>
    {{#each posts}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.image}}</td>
            <td>{{this.author}}</td>
            <td>
                <button>
                    <a href="/{{this._id}}">Edit</a>
                </button>
            </td>
            <td>
                <form method="POST" action="/{{this._id}}?_method=DELETE">
                    <button>Delete</button>
                </form>
            </td>
        </tr>
    {{/each}}
</table>